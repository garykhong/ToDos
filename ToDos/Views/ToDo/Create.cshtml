@model ToDos.Models.ToDo
@using ToDos.Controllers
@using ToDos.Models

@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/DefaultButtonClicker.js"></script>
<script type="text/javascript">
    SetDefaultButtonToBeClickedOnEnterPress("MainForm", "btnCreateToDo")
</script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "MainForm" }))
{
    <div class="form-horizontal">
        <h4>To Do</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.WhatToDo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.WhatToDo, new { cols = "55", rows = "4" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Maintain files" class="btn-link" name="maintainToDoChild" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Maintain reminders" class="btn-link" name="maintainToDoChild" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnCreateToDo" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
