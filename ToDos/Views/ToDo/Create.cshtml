@model ToDos.Models.ToDo

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<script src="~/Scripts/DefaultButtonClicker.js"></script>
<script type="text/javascript">
    SetDefaultButtonToBeClickedOnEnterPress("MainForm", "btnCreateToDo")
</script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "MainForm" }))
{
    <div class="form-horizontal">
        <h4>To Do</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.WhatToDo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WhatToDo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Maintain Files" class="btn-link" name="maintainFiles" />
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnCreateToDo" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
