@model ToDos.Models.ToDo
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4>To Do</h4>
    <hr />
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.OrderID)
    <div class="form-group">
        @Html.LabelFor(model => model.WhatToDo, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.WhatToDo, new { cols = "55", rows = "4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WhenItWasDone, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.WhenItWasDone,
                             new { htmlAttributes = new { @autocomplete = "off" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Maintain Files", "Index", "ToDoFile", new { toDoID = Model.ID }, new object())
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>